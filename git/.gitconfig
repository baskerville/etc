[core]
	editor = nvim
	excludesfile = /Users/ice/.gitignore
[user]
	name = Bastien Dejean
	email = nihilhill@gmail.com
[push]
	default = simple
[merge]
	tool = vimdiff
	ff = only
[mergetool]
	prompt = false
[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[alias]
	ls = log --oneline --decorate --graph
[color]
	ui = auto
[color "diff"]
	plain = normal
	meta = bold
	frag = cyan bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = black red
[color "branch"]
	current = green bold
	local = normal
	remote = red bold
	plain = normal
[color "status"]
	header = normal
	added = red bold
	updated = green bold
	changed = yellow bold
	untracked = magenta bold
	nobranch = red
[color "grep"]
	match = yellow bold
[color "interactive"]
	prompt = normal
	header = black bold
	help = magenta bold
	error = red bold
