. ~/.coordinates
. ~/.github_api_token

EDITOR=nvim
PAGER=less
BROWSER=chromium
export EDITOR PAGER BROWSER

LANG="en_US.UTF-8"
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
TZ=Europe/Paris
export LANG LC_CTYPE LC_ALL TZ

XDG_CONFIG_HOME="$HOME/.config"
XDG_DATA_HOME="$HOME/.local/share"
XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME XDG_DATA_HOME XDG_CACHE_HOME

XDG_DOWNLOAD_DIR="$HOME/Downloads"
XDG_ETC_DIR="$HOME/etc"
XDG_BIN_DIR="$HOME/bin"
XDG_TMP_DIR="$HOME/tmp"
export XDG_DOWNLOAD_DIR XDG_ETC_DIR XDG_COLORS_DIR XDG_TRASH_DIR XDG_BIN_DIR XDG_TMP_DIR

GOPATH="$HOME/.go"
SHARE_ROOT=/mnt/livebox/data
LIBGS=/opt/pkg/lib/libgs.dylib
TEXINPUTS=".:$XDG_DATA_HOME/texmf//:"
PYTHONIOENCODING='utf-8'
XML_CATALOG_FILES=/opt/pkg/etc/xml/catalog
BC_ENV_ARGS="-ql $HOME/.bcrc"
export GOPATH SHARE_ROOT LIBGS TEXINPUTS PYTHONIOENCODING XML_CATALOG_FILES BC_ENV_ARGS

DISPLAY=:0
LIBRARY_PATH="/opt/pkg/lib:$LIBRARY_PATH"
PKG_CONFIG_PATH=/usr/local/lib/pkgconfig:/opt/X11/lib/pkgconfig
CPPFLAGS=" -I/opt/pkg/include -I/opt/X11/include"
LDFLAGS=" -L/opt/pkg/lib -L/opt/X11/lib"
export DISPLAY LIBRARY_PATH PKG_CONFIG_PATH CPPFLAGS LDFLAGS

NNTPSERVER=pasdenom.info
SLRNPULL_ROOT="$HOME/.usenet"
export NNTPSERVER SLRNPULL_ROOT

SHELL_ALIASES="$HOME/.shell_aliases"
SHELL_FUNCTIONS="$HOME/.shell_functions"
export SHELL_ALIASES SHELL_FUNCTIONS

JINJA_FILTERS_DIR="$HOME"/.local/bin/jinja_filters
DIANA_DOWNLOAD_DIR=$XDG_TMP_DIR
DIANA_INFO_COMMAND=fileinfo
COPYFILE_DISABLE=1
export JINJA_FILTERS_DIR DIANA_DOWNLOAD_DIR DIANA_INFO_COMMAND COPYFILE_DISABLE

CLICOLOR=1
LSCOLORS=ExDxCxcxBxGxgxHxHxFxfx
# LS_COLORS="di=1;34:ln=1;33:so=1;32:pi=32:ex=1;31:bd=1;36:cd=36:su=1;37:sg=1;37:tw=1;35:ow=35:"
GREP_OPTIONS='--color=auto'
GREP_COLORS='ms=1;37:mc=1;37:sl=:cx=:fn=1;33:ln=1;36:bn=1;35:se=1;30'
export CLICOLOR LSCOLORS GREP_OPTIONS GREP_COLORS

LESS_TERMCAP_mb='[1;31m'
LESS_TERMCAP_md='[1;34m'
LESS_TERMCAP_me='[0m'
LESS_TERMCAP_so='[40;37m'
LESS_TERMCAP_se='[0m'
LESS_TERMCAP_us='[1;33m'
LESS_TERMCAP_ue='[0m'
export LESS_TERMCAP_mb LESS_TERMCAP_md LESS_TERMCAP_me LESS_TERMCAP_so LESS_TERMCAP_se LESS_TERMCAP_us LESS_TERMCAP_ue

# vim: ft=sh
