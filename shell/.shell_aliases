alias eal='e "$SHELL_ALIASES"'
alias efu='e "$SHELL_FUNCTIONS"'

alias cp='cp -i'
alias mv='mv -i'
alias p="pbpaste | e -"
alias s='surfraw duckduckgo'
alias i='type -a'
alias c='pgrep -x mpop > /dev/null 2>&1 || mpop -a'
alias g=rg
alias m=mutt

alias y='file -b'
alias yt='file -b --mime-type'
alias ye='file -b --mime-encoding'
alias x='tr "\n" "\0" | xargs -0'

alias chbin='chmod 755'
alias chreg='chmod 644'
alias operm='stat -f %p'
alias unpack='tar -xv --keep-newer-files -f'
alias lsync='rsync -vurt --modify-window 1'

alias ls='ls -h'
alias n='ls -rtc'
alias lS='ls -LrksS'
alias lr='ls -R'
alias lsd='ls -d *(/)'

alias lta='later add'
alias lts='later ls'
alias ltr='later rm'

alias yd='youtube-dl -f "bestvideo+bestaudio"'
alias fren='trans fr:en'
alias enfr='trans en:fr'
alias jaen='trans ja:en'
alias enja='trans en:ja'

alias python='rlwrap python3 -q'
alias python2='rlwrap python2'
alias slrn='slrn --spool'

alias T='date +%H:%M:%S'
alias D='date +%Y-%m-%d'

alias dlp='lp -o Duplex=DuplexNoTumble'

